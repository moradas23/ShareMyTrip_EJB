<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<managed-bean>
		<managed-bean-name>registro</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanRegistro</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean> 
	
	<managed-bean>
		<managed-bean-name>user</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanUser</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>settings</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanSettings</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>trips</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanTrips</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>trip</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanTrip</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	

	<application>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>


	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>listadoPublico</from-outcome>
			<to-view-id>/listaViajesPublico.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>listadoRegistrado</from-outcome>
			<to-view-id>/restricted/listaViajesRegistrado.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>cerrarSesion</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/registrarse.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>exito</from-outcome>
			<to-view-id>/restricted/principal.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/listaViajesPublico.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>fracaso</from-outcome>
			<to-view-id>/registrarse.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/restricted/listaViajesRegistrado.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>exito</from-outcome>
			<to-view-id>/restricted/datosViaje.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	<navigation-rule>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>exito</from-outcome>
			<to-view-id>/restricted/principal.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>fallo</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	<navigation-rule>
		<from-view-id>/restricted/registrarViaje.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>exito</from-outcome>
			<to-view-id>/restricted/principal.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>fallo</from-outcome>
			<to-view-id>/restricted/registrarViaje.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/restricted/misViajes.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>modificar</from-outcome>
			<to-view-id>/restricted/modificarViaje.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>cancelTrip</from-outcome>
			<to-view-id>/restricted/misViajes.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>cancelFail</from-outcome>
			<to-view-id>/restricted/misViajes.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/restricted/modificarViaje.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>exito</from-outcome>
			<to-view-id>/restricted/principal.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>fallo</from-outcome>
			<to-view-id>/restricted/modificarViaje.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
</faces-config>
